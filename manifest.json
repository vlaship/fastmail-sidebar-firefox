{

  "manifest_version": 2,
  "name": "Fastmail Sidebar",
  "version": "0.1.1",
  "description": "Displays a sidebar with Fastmail.",
  "author": "vlaship",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "73.0"
    }
  },

    "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "300": "icons/icon.png"
  },

  "sidebar_action": {
    "default_icon": {
      "300": "icons/icon.png"
    },
    "default_title" : "Fastmail",
    "default_panel": "index.html"
  },

  "browser_action": {
  "default_icon": {
      "300": "icons/icon.png"
    },
   "theme_icons": [{
                "light": "/icons/icon.png",
                "dark": "/icons/icon.png",
                "size": 300
                
            }]},
 

  "permissions": ["storage", "tabs"],

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+M"
      }
    }
  }

}